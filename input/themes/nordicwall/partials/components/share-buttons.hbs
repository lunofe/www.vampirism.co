{{#if @config.custom.shareFacebook}}
   <a
      href="https://www.facebook.com/sharer/sharer.php?u={{encodeUrlFragment url}}"
      class="js-share facebook"
      rel="nofollow noopener noreferrer">
      {{ translate 'partials.shareButtons.shareWithFacebook' }}
   </a>
{{/if}}

{{#if @config.custom.shareTwitter}}
   <a
      href="https://twitter.com/intent/tweet?url={{encodeUrlFragment url}}&amp;via={{#if @config.custom.shareTwitterName}}{{encodeUrlFragment @config.custom.shareTwitterName}}{{else}}{{encodeUrlFragment @website.name}}{{/if}}&amp;text={{encodeUrlFragment title}}"
      class="js-share twitter"
      rel="nofollow noopener noreferrer">
     {{ translate 'partials.shareButtons.shareWithTwitter' }}
   </a>
{{/if}}

{{#if @config.custom.sharePinterest}}
   <a
      href="https://pinterest.com/pin/create/button/?url={{encodeUrlFragment url}}&amp;media={{encodeUrlFragment featuredImage.url}}&amp;description={{encodeUrlFragment title}}"
      class="js-share pinterest"
      rel="nofollow noopener noreferrer">
      {{ translate 'partials.shareButtons.shareWithPinterest' }}
   </a>
{{/if}}

{{#if @config.custom.shareMix}}
